<h1 class="page-title">On-It</h1>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">
      <i class="fa fa-bars"></i> Projects
    </a>
    <div class="collapse navbar-collapse justify-content-end">
      <ul class="navbar-nav">
        <li class="nav-item">
          <span class="nav-link">Welcome, {{username}}</span>
        </li>
        <li class="nav-item">
          <a id ="logout-btn" class="nav-link" href="/logout">Log Out</a>
        </li>
      </ul>
    </div>
  </div>
</nav>
<div id="project-name" class="container my-4">
  <div class="d-flex justify-content-between align-items-center">
    <h3 class="text-style">{{projectname}}</h3>
    <button id ="new-project" class="btn btn-primary text-white">New Project</button>
    <p class="mb-0 text-style">Due Date: {{due_date}}</p>
  </div>
</div>
<div>
    <button id ="new-task" class="btn btn-primary text-white">New Task</button>
</div>
<div id="week">
    <div class="d-flex justify-content-between">
    <button class="btn btn-light text-dark">Previous Week</button>
    <button class="btn btn-light text-dark">Next Week</button>
    </div>
</div>
<div id="calender-cards"></div>

<!-- Create Project Modal -->
{{> createProjectModal}}

<!-- New Task Modal -->
{{> newTaskModal}}

