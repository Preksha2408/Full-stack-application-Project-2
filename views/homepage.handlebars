<div class="text-center my-4">
  <h1 class="page-title"><i class="fa fa-calendar"></i> OnIt</h1>
</div>
<nav class="navbar navbar-expand-lg navbar-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">
      <i class="fa fa-bars"></i>Projects
    </a>
    <div class="collapse navbar-collapse justify-content-end">
      <ul class="navbar-nav">
        <li class="nav-item">
          <span class="nav-link welcome">Welcome, {{username}}</span>
        </li>
        <li class="nav-item">
          <a id ="logout-btn" class="nav-link" href="/logout">Log Out</a>
        </li>
      </ul>
    </div>
  </div>
</nav>
<div id="project-name" class="container my-4">
  <div class="d-flex justify-content-between align-items-center">
    <h3 class="text-style">{{projectname}}</h3>
    <button id="new-project" class="btn btn-primary text-white mx-auto">New Project</button>
    <h3 class="mb-0 text-style">{{due_date}}</h3>
  </div>
</div>

<div class="text-center my-4">
  <button id="new-task" class="btn btn-primary text-white">New Task</button>
</div>
<div id="week">
  <div class="d-flex justify-content-between">
    <button id="week-btn" class="btn btn-secondary ">
      &lt; Previous Week
    </button>
    <button id="week-btn" class="btn btn-secondary ms-3">
      Next Week &gt;
    </button>
  </div>
</div>
<div id="calender-cards" style="border: 2px solid black; margin-left: 40px ; margin-right: 40px; padding:10px ; background-color: #f9f9f9; height:400px; margin-top: 30px "></div>

<!-- Create Project Modal -->
{{> createProjectModal}}

<!-- New Task Modal -->
{{> newTaskModal}}

