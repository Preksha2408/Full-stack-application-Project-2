<h1 class="page-title"><i class="fa fa-calendar"></i> OnIt</h1>
<nav class="navbar navbar-expand-lg navbar-dark"/>
  <div class="container mt-4">
    <!--  task creation form goes here -->
    <form id="task-form">
      <div class="mb-3">
        <label for="task-name" class="form-label">Task Name</label>
        <input type="text" class="form-control" id="task-name" required>
      </div>
      <div class="mb-3">
        <label for="task-due-date" class="form-label">Due Date</label>
        <input type="date" class="form-control" id="task-due-date" required>
      </div>
      <div class="mb-3">
        <label for="task-description" class="form-label">Task Description</label>
        <textarea class="form-control" id="task-description" rows="3" required></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Save Task</button>
    </form>
  </div>

<script src="/js/task.js"></script>
